# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================
PORT=5000
NODE_ENV=development
API_HOST_NAME=localhost

# ===========================================
# BASE DE DATOS
# ===========================================
MONGO_URI=mongodb+srv://user:pass@cluster/db

# ===========================================
# AUTENTICACIÓN JWT
# ===========================================
JWT_SECRET=supersecretkey
JWT_EXPIRES_IN=7d

# ===========================================
# COOKIES HTTP-ONLY (Sesión segura)
# ===========================================
# COOKIE_SECRET=          # Opcional: usa JWT_SECRET por defecto
# COOKIE_NAME=auth_token  # Nombre de la cookie
# COOKIE_MAX_AGE=604800000  # 7 días en milisegundos
# COOKIE_SAME_SITE=strict   # strict | lax | none
# COOKIE_DOMAIN=            # Opcional: dominio para la cookie (ej: .midominio.com)

# ===========================================
# RECAPTCHA
# ===========================================
RECAPTCHA_SECRET_KEY=xxx

# ===========================================
# RABBITMQ (Notificaciones en tiempo real)
# ===========================================
ENABLE_REALTIME_NOTIFICATIONS=true
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# ===========================================
# URLs DE LA APLICACIÓN
# ===========================================
FRONTEND_URL=http://localhost:3000
API_URL_BASE=http://localhost
API_BASE_PATH=/api/v1.0.0

# ===========================================
# EMAIL - Proveedor: smtp | ses | sendgrid
# ===========================================
EMAIL_PROVIDER=ses
MAILER_FROM=noreply@example.com

# Configuración SES (si EMAIL_PROVIDER=ses)
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Configuración SendGrid (si EMAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=

# Configuración SMTP (si EMAIL_PROVIDER=smtp)
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=465
# SMTP_USER=
# SMTP_PASS=

# ===========================================
# STRIPE (Suscripciones y pagos)
# ===========================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID=price_xxx